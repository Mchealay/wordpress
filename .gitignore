# WordPress core - don't track as it can be reinstalled
/wp-admin/
/wp-includes/
/wp-*.php
/readme.html
/license.txt
/xmlrpc.php

# wp-content - only track custom themes/plugins
/wp-content/*
!/wp-content/plugins/
!/wp-content/themes/

# Exclude specific folders
/wp-content/themes/twenty*/
/wp-content/plugins/hello.php
/wp-content/uploads/
/wp-content/cache/
/wp-content/upgrade/

# Environment files
.env
wp-config.php
*.sql
*.log

# Dependency directories
/node_modules/
/vendor/

# IDE files
.idea/
.vscode/
*.swp